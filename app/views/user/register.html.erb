<style type="text/css">
  .text{font-family: Verdana, Geneva, sans-serif;}
  .text label{font-size: 1.5em;}
  h1 {font-size: 2.5em;}
</style>
<% content_for(:head) do %>
<% javascript_include_tag :register %>
<% end %>
<% if user.done? %>
 
<p class="text">Currently registered for:
  <br />
  <% user.workshops.collect {|w| w.name}.each do |n|  %><br />
  <%= n %>
  <br />
  <% end %>
</p>
<div class="text">
  <p><strong>You're done!</strong> You can now <%= link_to "log out", "/user/logout"%>.</p>
</div>

<% else %>
<h1>Step Two: Register for Workshops</h1>
<p class="text">Click on a workshop to see its description. Press submit to sign up for the highlited workshops.</p>

<div style="float: left;">

  <%= form_tag(:controller => "user", :action => "register") do %>
</br>
First Session</br>
<%= select(:user, :first, Workshop.firsts.collect {|w| [w.name, w.id]}, {}, {:size => "6"})  %>
</br></br>
Second Session</br>
<%= select(:user, :second, Workshop.seconds.collect {|w| [w.name, w.id]}, {}, {:size => "6"})  %>
</br></br>
Third Session</br>
<%= select(:user, :third, Workshop.thirds.collect {|w| [w.name, w.id]}, {}, {:size => "6"})  %>
</br></br>

<br />
<%= submit_tag("Register") %>
</div>

<div style="float: left; width: 350px; margin: 20px;">
<h3 id="presentor"></h3>
<div id="description" style="font-size: 0.9em;">
</div>
</div>
<% end %>
<% end %>
