<style type="text/css">
  .text{font-family: Verdana, Geneva, sans-serif;}
  .text label{font-size: 1.5em;}
  h1 {font-size: 2.2em;}
</style>
<body>
<h1 class="text">Step 1: Log In</h1>

<div style="float: left; ">
  <%= image_tag "/assets/steele.png" %>
</div>
<div class="text" style="float: left">
  <div class = "text" style="float: left; position: relative; left: 15%;" >
    <%= form_tag(:action => "login") do %>

    <label for="user_login">Username:</label><br/>
    Your Regis Login <br/>
    It's the same as the first<br/> part of your Regis email<br/><br/>

    <%= text_field("user", "login", :size => 20, :placeholder => "PSteele88")%>
    <% if flash[:error] %>
    <p id="flash_error" style="color: #c41130;"><%= flash[:error] %></p>
    <% else %>
    <br /><br /><br />
    <% end %>

    <label for="user_student_id">Student ID:</label><br/>
    The five digit number on your <br/> student ID.<br/><br/>

    <%= password_field("user","student_id",:size => 20, :placeholder => "12345" )%>

    <br/><br/>
    
    <%= submit_tag("Continue") %> 
    
    <% end %>
  </div>
</div>
</body>
