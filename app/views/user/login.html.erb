<style type="text/css">
  .text{font-family: Verdana, Geneva, sans-serif;}
  .text label{font-size: 1.5em;}
  h1 {font-size: 2.5em;}
</style>

<h1 class="text">Step 1: Log In</h1>


<div style="float: left; ">
  <%=image_tag "/assets/Howard ID.png"%>
</div>
<div class="text" style="float: left">
  <div class = "text" style="float: left; position: relative; left: 15%;" >
    <%= form_tag(:action => "login") do %>

    <label for="name">Username:</label><br/>
    Your first initial followed by <br/> your last name and your year.<br/><br/>    
    <%= text_field("user", "name", :size => 20, :placeholder => "Eg: JHoward88" )%><br/><br/>

    <label for="student_id">Student ID:</label><br/>
    The five digit number on your <br/> student ID.<br/><br/>
    <%= password_field("user", "student_id", :size => 20, :placeholder => "Eg: 12345")%><br/><br/>
    
    <%= submit_tag("Continue")%>
    
    <% end %>
  </div>
</div>
